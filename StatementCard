import React from 'react';

function StatementCard({ quote, onSave }) {
  return (
    <div className="card p-10 text-white border-[2px] rounded-md bg-slate-600 ">
      <p className='p-10 rounded-md border-[2px]'>{quote}</p>
      <button className="bg-slate-800 align-baseline p-1 rounded-md  text-white px-3"onClick={() => onSave(quote)}>Save to List</button>
    </div>
  );
}

export default StatementCard;
